<!doctype html>
<html class="no-js" lang="pt-br">
<head>
  <%= favicon_link_tag 'logo.png' %>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>

  <title>Skeleton Project Rails</title>

  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag :modernizr %>
</head>
<body>
  <%= render 'layouts/alerts' %>

  <header class="header">
    <div class="container">
      <div class="logo">
        <%= link_to root_path, class: 'logo__link' do %>
          <%= image_tag('logo.png', alt: 'Logo description', class: 'logo__image') %>
        <% end %>
      </div>

      <a class="nav__btn nav--open ion-navicon" href="#"></a>

      <nav class="nav">
        <ul class="nav__list">
          <li class="nav__item">
            <%= link_to 'Fork', 'https://github.com/luizpicolo/skeleton-project-rails', class: 'nav__link' %>
          </li>
        </ul>
      </nav>
    </div>
  </header>

  <div class="main">
    <%= yield %>
  </div>

  <footer class="footer">
    <div class="container">
      <small class="footer__small">
        Created with <span class="ion-heart"></span> by
        <%= link_to 'Luiz Picolo', 'https://github.com/luizpicolo' %> and
        <%= link_to 'Gabriel Medina', 'https://github.com/gabrielmedina' %>
      </small>

      <div class="footer__author">
        <%= link_to 'https://github.com/luizpicolo/skeleton-project-rails' do %>
          <span class="ion-fork-repo"></span> Fork it on GitHub
        <% end %>
      </div>
    </div>
  </footer>
</body>
</html>
